\\
\textbf{Exemplos:}

\begin{enumerate}
    \item Pesquisa de opnião em Itapajé.

\textit{Amostra}: Conjunto de 100 a 500 moradores que serão entrevistados pelos pesquisadores.


\textbf{Exemplo no Python}

\begin{lstlisting}
import random

populacao_itapaje = ['nao_favoravel'] * 490 + ['favoravel'] * 510 # Simulando a população

tamanho_amostra = random.randint(100, 500)

amostra_itapaje = random.sample(populacao_itapaje, tamanho_amostra) # Amostra aleatória

proporcao_favoravel = amostra_itapaje.count('favoravel') / tamanho_amostra

print("Amostra de moradores entrevistados:", tamanho_amostra)
\end{lstlisting}


\textbf{Exemplo no R}

\begin{lstlisting}
populacao_itapaje <- rep(c('nao_favoravel', 'favoravel'), c(490, 510))

tamanho_amostra <- sample(100:500, 1)

amostra_itapaje <- sample(populacao_itapaje, tamanho_amostra, replace = FALSE)

proporcao_favoravel <- sum(amostra_itapaje == 'favoravel') / tamanho_amostra

cat("Amostra de moradores entrevistados:", tamanho_amostra, "\n")
\end{lstlisting}

