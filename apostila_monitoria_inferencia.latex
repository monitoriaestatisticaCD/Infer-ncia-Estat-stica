\subsubsection{Distribuição Amostral da Média  para populações normais ($\overline{X}$)}


Seja $\overline{X}$ uma variável aleatória $\overline{X}$ $\sim$ $N(\mu, \frac{\sigma^{2}}{n}).$ \\

Propriedades:

\begin{equation}
\centering
M\acute{e}dia= E(\overline{x})= \mu_{\overline{x}}= \mu 
\end{equation}

\begin{equation}
\centering
Vari\hat{a}ncia=VAR(\overline{x})=\sigma \frac{2}{x}=\frac{\sigma^{2}}{x}  
\end{equation}

\begin{equation}
\centering
Desvio\; padr\tilde{a}o=DP(\overline{x})=\sigma_{\overline{x}}=\frac{\sigma}{\sqrt{n}}
\end{equation}

\textbf{Demonstração:}

\begin{align}
    E(\bar{x}) &= \left( \frac{X_{1}+X_{2}+...+X_{n}}{n} \right)=\frac{1}{n}E(X_{1}+X_{2}+...+X_{n}) \\
    &=\frac{1}{n}\left[E(X_{1}+E(X_{2}+...+E(X_{n})))  \right] \\
    &=\frac{1}{n}(\mu+\mu+...+\mu)=\frac{1}{n}n\mu=\mu
\end{align} \\

Sabendo que, sendo $k$ constante e $x$ e $y$ variáveis temos que: \\

\begin{align}
    Var(k*x)&=k^{2}*var(x) \\
    Var(y+x)&= Var(x) + Var(y)
\end{align}

Então:
\begin{align}
    Var(\bar{X}) &= \left( \frac{{X_{1}+X_{2}+...+X_{n}}}{n} \right) = \left( \left( \frac{1}{n} \right)^{2} X_{1}+X_{2}+...+X_{n}\right)= \frac{1}{n_{2}}Var\left( X_{1}+X_{2}+...+X_{n} \right) \\
    &= \frac{1}{n_{2}}\left[ Var(X_{1})+Var(X_{2})+...+Var(X_{n}+\sum_{i\neq j}Cov\left( X_i,X_j \right)) \right] \\
    &= \frac{1}{n_{2}}\left( \sigma_{2}+\sigma_{2}+...+0 \right) = \frac{1}{n_{2}}n\sigma_{2}=\frac{\sigma_{2}}{n} 
\end{align} \\

