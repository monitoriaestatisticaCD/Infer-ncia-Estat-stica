pdf <- dnorm(x, mean = 0, sd = 1)

area_total <- 1

df <- data.frame(x, pdf)

ggplot(data = df, aes(x = x, y = pdf)) +
  geom_line(color = "blue") +
  geom_area(fill = "lightblue", alpha = 0.5, aes(x = x, y = pdf)) +
  labs(title = "Distribuição Normal Padrão Acumulada",
       x = "Valores de Z",
       y = "Densidade de Probabilidade") +
  annotate("text", x = 0, y = 0.15, label = paste("Área Total =", area_total), color = "black")
\end{lstlisting}

 
\end{enumerate}

